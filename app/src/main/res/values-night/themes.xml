<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlatMate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/flatmate_blue</item>
        <item name="colorPrimaryVariant">@color/flatmate_lightblue</item>
        <item name="colorOnPrimary">@color/grey_50</item>
        <item name="colorSecondary">@color/flatmate_blue</item>
        <item name="colorSecondaryVariant">@color/flatmate_darkblue</item>
        <item name="colorOnSecondary">@color/grey_50</item>
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/grey_50</item>
        <item name="colorSurface">@color/grey_800</item>
        <item name="colorOnSurface">@color/grey_50</item>
        <item name="android:colorBackground">@color/grey_900</item>
        <item name="colorOnBackground">@color/grey_50</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>